#*#################################################################################
#?					 Region
#*#################################################################################
variable "region" {
  type    = string
  default = "us-east-1"
}


#*#################################################################################
#?					 Profile
#*#################################################################################
variable "profile" {
  type    = string
  default = "md-cli"
}

#*#################################################################################
#?					 Environment
#*#################################################################################
variable "env" {
  type    = string
  default = "prod"
}



#*##################################################################################
#?				 Prefix
#*#################################################################################
variable "prefix" {
  type    = string
  default = "helloworld"
}




#*##################################################################################
#?				 CIDR
#*#################################################################################
variable "cidr_default" {
  type    = string
  default = "192.168.0.0/16"
}


#*##################################################################################
#?				 Public CIDR
#*#################################################################################
variable "public_cidr" {
  type    = list(string)
  default = ["192.168.0.0/24", "192.168.1.0/24", "192.168.2.0/24"]
}


#*##################################################################################
#?				 Private CIDR
#*#################################################################################
variable "private_cidr" {
  type    = list(string)
  default = ["192.168.3.0/24", "192.168.4.0/24", "192.168.5.0/24"]
}



#*##################################################################################
#?				 Availability Zones
#*#################################################################################
variable "az_zones" {
  type    = list(string)
  default = ["us-east-1a", "us-east-1b", "us-east-1c"]
}



